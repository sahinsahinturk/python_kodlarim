# Cümle içinde harf kaç kez geçmiş

cumle=input("Cümleyi Gir")
uzunluk=len(cumle)
indx=uzunluk-1
i=0
print(uzunluk)
print(indx)
while i < uzunluk:
    sayac=0
    a=cumle[i]
    harf=str(a)
    j=0
    while j<uzunluk:
        b=cumle[j]
        harf2=str(b)
        if harf==harf2:
            sayac=sayac+1
            j=j+1
        else:
            j=j+1

    print("{0} harfinden {1} tane var".format(a,sayac))
    i+=1
